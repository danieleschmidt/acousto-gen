# Acousto-Gen Environment Configuration

# ============================================================================
# CORE SETTINGS
# ============================================================================

# Default device for computation (cpu, cuda, cuda:0, etc.)
ACOUSTO_DEVICE=cuda

# Precision for calculations (float32 for speed, float64 for accuracy)
ACOUSTO_PRECISION=float32

# Maximum GPU memory to use (in GB, 0 for unlimited)
ACOUSTO_GPU_MEMORY_LIMIT=8

# ============================================================================
# PHYSICS ENGINE
# ============================================================================

# Default operating frequency (Hz)
ACOUSTO_DEFAULT_FREQUENCY=40000

# Default propagation medium (air, water, tissue)
ACOUSTO_DEFAULT_MEDIUM=air

# Speed of sound override (m/s, empty for medium default)
ACOUSTO_SPEED_OF_SOUND=

# Medium density override (kg/m³, empty for medium default)
ACOUSTO_MEDIUM_DENSITY=

# ============================================================================
# OPTIMIZATION SETTINGS
# ============================================================================

# Default optimization algorithm (adam, sgd, genetic, neural)
ACOUSTO_DEFAULT_OPTIMIZER=adam

# Maximum optimization iterations
ACOUSTO_MAX_ITERATIONS=1000

# Convergence threshold
ACOUSTO_CONVERGENCE_THRESHOLD=1e-6

# Learning rate for gradient-based methods
ACOUSTO_LEARNING_RATE=0.01

# ============================================================================
# SAFETY CONFIGURATION
# ============================================================================

# Maximum acoustic pressure (Pa)
ACOUSTO_MAX_PRESSURE=4000

# Maximum acoustic intensity (W/cm²)
ACOUSTO_MAX_INTENSITY=10

# Maximum temperature increase (°C)
ACOUSTO_MAX_TEMPERATURE=40

# Enable safety monitoring
ACOUSTO_ENABLE_SAFETY=true

# Safety check interval (Hz)
ACOUSTO_SAFETY_CHECK_RATE=100

# Emergency shutdown enabled
ACOUSTO_EMERGENCY_SHUTDOWN=true

# ============================================================================
# HARDWARE SETTINGS
# ============================================================================

# Hardware update rate (Hz)
ACOUSTO_UPDATE_RATE=1000

# Auto-discover hardware devices
ACOUSTO_AUTO_DISCOVER=true

# Hardware communication timeout (seconds)
ACOUSTO_HARDWARE_TIMEOUT=5

# Enable hardware calibration drift detection
ACOUSTO_CALIBRATION_MONITORING=true

# Calibration check interval (hours)
ACOUSTO_CALIBRATION_INTERVAL=24

# ============================================================================
# LOGGING AND DEBUGGING
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
ACOUSTO_LOG_LEVEL=INFO

# Log file path (empty for console only)
ACOUSTO_LOG_FILE=

# Enable performance profiling
ACOUSTO_ENABLE_PROFILING=false

# Profile output directory
ACOUSTO_PROFILE_DIR=./profiles

# Enable debug visualizations
ACOUSTO_DEBUG_VISUALIZATION=false

# ============================================================================
# VISUALIZATION SETTINGS
# ============================================================================

# Default visualization backend (matplotlib, plotly, mayavi)
ACOUSTO_VIZ_BACKEND=plotly

# Default field resolution for visualization
ACOUSTO_VIZ_RESOLUTION=128

# Enable interactive plots
ACOUSTO_INTERACTIVE_PLOTS=true

# Export format for saved plots (png, svg, html, pdf)
ACOUSTO_EXPORT_FORMAT=html

# ============================================================================
# RESEARCH AND DEVELOPMENT
# ============================================================================

# Enable experimental features
ACOUSTO_EXPERIMENTAL_FEATURES=false

# Cache computation results
ACOUSTO_ENABLE_CACHING=true

# Cache directory
ACOUSTO_CACHE_DIR=./.acousto_cache

# Reproducibility seed (for deterministic results)
ACOUSTO_RANDOM_SEED=42

# ============================================================================
# EXTERNAL INTEGRATIONS
# ============================================================================

# Wandb API key for experiment tracking
WANDB_API_KEY=

# TensorBoard log directory
TENSORBOARD_LOG_DIR=./logs

# MLflow tracking URI
MLFLOW_TRACKING_URI=

# ============================================================================
# MEDICAL/CLINICAL SETTINGS (for medical applications)
# ============================================================================

# Regulatory mode (FDA, CE, RESEARCH)
ACOUSTO_REGULATORY_MODE=RESEARCH

# Patient safety protocols enabled
ACOUSTO_PATIENT_SAFETY=false

# Maximum exposure time (seconds)
ACOUSTO_MAX_EXPOSURE_TIME=300

# Thermal dose monitoring
ACOUSTO_THERMAL_MONITORING=false

# Clinical data encryption
ACOUSTO_ENCRYPT_DATA=true

# ============================================================================
# CLOUD AND DISTRIBUTED COMPUTING
# ============================================================================

# Enable distributed computation
ACOUSTO_DISTRIBUTED=false

# Ray cluster address (for distributed computing)
RAY_ADDRESS=

# Number of worker processes
ACOUSTO_NUM_WORKERS=4

# Cloud storage backend (s3, gcs, azure)
ACOUSTO_CLOUD_STORAGE=

# Cloud storage bucket/container
ACOUSTO_STORAGE_BUCKET=

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Database URL for persistence layer
# Development (SQLite)
DATABASE_URL=sqlite:///./acousto_gen.db

# Production (PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/acousto_gen

# Database connection settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Enable database query logging
DB_ECHO=false

# ============================================================================
# API SERVER CONFIGURATION
# ============================================================================

# FastAPI server settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# CORS configuration
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE
CORS_HEADERS=*

# API rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ============================================================================
# MONITORING AND METRICS
# ============================================================================

# Prometheus metrics
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Health check configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# OpenTelemetry tracing
OTEL_ENABLED=false
OTEL_ENDPOINT=http://localhost:4317

# ============================================================================
# DEVELOPMENT AND TESTING
# ============================================================================

# Test data directory
ACOUSTO_TEST_DATA_DIR=./test_data

# Generate test data if missing
ACOUSTO_GENERATE_TEST_DATA=true

# Skip slow tests
ACOUSTO_SKIP_SLOW_TESTS=false

# Test hardware connections
ACOUSTO_TEST_HARDWARE=false

# Benchmark mode (for performance testing)
ACOUSTO_BENCHMARK_MODE=false

# Test database URL
TEST_DATABASE_URL=sqlite:///./test_acousto_gen.db

# ============================================================================
# DOCKER AND DEPLOYMENT
# ============================================================================

# Container configuration
DOCKER_REGISTRY=acousto-gen
DOCKER_IMAGE_TAG=latest

# Kubernetes settings
K8S_NAMESPACE=acousto-gen
K8S_SERVICE_NAME=acousto-gen-api

# Environment type
ENVIRONMENT=development